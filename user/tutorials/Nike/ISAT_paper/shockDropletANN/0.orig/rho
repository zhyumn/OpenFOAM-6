FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      rho;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -3 0 0 0 0 0];

//internalField  uniform 20e6;

internalField  #codeStream
{
    
        codeInclude
        #{
            #include "fvCFD.H"
        #};
        codeOptions
        #{
            -I$(LIB_SRC)/finiteVolume/lnInclude \
            -I$(LIB_SRC)/meshTools/lnInclude
        #};  
        codeLibs
        #{
            -lmeshTools \
            -lfiniteVolume
        #};
        code
        #{
            const IOdictionary & d = static_cast<const IOdictionary&>(dict);
            const fvMesh& mesh = refCast<const fvMesh>(d.db());


            double Tlow=7.18235;
            double Thigh=28.2129;

            scalarField rho(mesh.nCells(), Tlow);
            forAll(rho, i)
            {
                const scalar x1 = mesh.C()[i][0];
                //const scalar y = mesh.C()[i][1];
                //const scalar z = mesh.C()[i][2];
                if (x1 < -0.2e-3)
                {
                    rho[i] = Thigh;
                }
            }
 
            double r = 0.125e-3;
            double x_center = 0.5e-3;
            double y_center = 0.5e-3;
            double thickness = 5e-5;
            double omega=1e-5;
            double Clow=Tlow;
            double Chigh=51.9456;

            forAll(rho, i)
            {
                const scalar x = mesh.C()[i][0];
                const scalar y = mesh.C()[i][1];
                //const scalar z = mesh.C()[i][2];
                scalar r_tmp=sqrt(sqr(y - y_center)+sqr(x-x_center));
                if (r_tmp < r-thickness/2)
                {
                    rho[i] = Chigh;
                }
                else if (r_tmp < r+thickness/2)
                {
                    rho[i] =0.5*(Clow+Chigh)+0.5*(Clow-Chigh)*tanh((r_tmp-r)*5/omega);
                }
            }

            rho.writeEntry( "", os);
        #};
};

boundaryField
{
    wall
    {
        type            empty;
    }
    top
    {
        type            zeroGradient; //symmetryPlane; //zeroGradient;
    }
    bottom
    {
        type            zeroGradient; //symmetryPlane; //zeroGradient;
    }
    inlet
    {
        type            zeroGradient;//waveTransmissiveDF;
    }
    outlet
    {
        type            zeroGradient;//waveTransmissiveDF;
    }
}


